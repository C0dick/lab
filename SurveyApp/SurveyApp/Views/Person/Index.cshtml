@model IEnumerable<SurveyApp.Models.Person>

@{
    ViewBag.Title = "Список участников";
}

<h2>Список участников</h2>

<p>
    @Html.ActionLink("Добавить участника", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.FullName)</th>
        <th>@Html.DisplayNameFor(model => model.Age)</th>
        <th>@Html.DisplayNameFor(model => model.Gender)</th>
        <th>Работает</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
            <td>@Html.DisplayFor(modelItem => item.Age)</td>
            <td>@Html.DisplayFor(modelItem => item.Gender)</td>
            <td>@(item.HasJob ? "Да" : "Нет")</td>
            <td>
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-xs" })
            </td>
        </tr>
    }
</table>